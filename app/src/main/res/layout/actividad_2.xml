<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_mapa"
        android:layout_width="409dp"
        android:layout_height="385dp"
        android:layout_marginTop="117dp"
        app:layout_constraintTop_toTopOf="@+id/spinner_centros"
        tools:layout_editor_absoluteX="1dp">

    </FrameLayout>

    <Button
        android:id="@+id/b_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="283dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="@+id/frame_mapa"
        app:layout_constraintStart_toStartOf="@+id/frame_mapa"
        app:layout_constraintTop_toBottomOf="@+id/frame_mapa" />

    <Button
        android:id="@+id/b_ver_viajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="88dp"
        android:text="Ver viajes"
        app:layout_constraintEnd_toEndOf="@+id/frame_mapa"
        app:layout_constraintStart_toStartOf="@+id/frame_mapa"
        app:layout_constraintTop_toBottomOf="@+id/frame_mapa" />

    <Spinner
        android:id="@+id/spinner_centros"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="512dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />
</androidx.constraintlayout.widget.ConstraintLayout>